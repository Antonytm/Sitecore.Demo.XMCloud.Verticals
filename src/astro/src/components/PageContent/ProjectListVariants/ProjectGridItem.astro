---
import {
  Field,
  Image,
  ImageField,
  Text,
  RichTextField,
} from "@astro-sitecore-jss/astro-sitecore-jss";

interface Fields {
  Title: Field<string>;
  Category: Field<string>;
  Abstract: Field<string>;
  Problem: RichTextField;
  Solution: RichTextField;
  Thumbnail: ImageField;
  Client: ImageField;
}

export type ProjectListItemProps = {
  fields: Fields;
  name: string;
  url: string;
};

const { item }: { item: ProjectListItemProps } = Astro.props;
---

<div class="project-grid-item">
  <a href={item.url} class="wrapper-link">
    <Image field={item.fields.Thumbnail} />
    <div class="project-grid-item-content">
      <span class="project-category">
        <Text field={item.fields.Category} />
      </span>
      <h3 class="project-title fs-5 mb-0">
        <Text field={item.fields.Title} />
      </h3>
    </div>
  </a>
</div>
